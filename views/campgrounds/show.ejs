<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Yelp Camp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
      <div class="col-md-9">
        <div class="card">
          <img class="rounded card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
          <div class="card-body">
            <h4 class="float-right">$9.00/night</h4>
            <h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
          </div>
            <p><%= campground.description %></p>
        </div>
        <div class="card">
          <div class="card-body">
            <a href="/campgrounds/<%= campground._id%>/comments/new" class="btn btn-success float-right">Add New Comment</a>
              <% campground.comments.forEach( (comment) => { %>
                <div class="row">
                  <div class="col-md-12">
                    <%= comment.author %>
                    <p class="float-right">10 days ago</p>
                    <p>
                      <%= comment.text %>
                    </p>
                  </div>
                </div>
              <% }) %>
          </div>
        </div>
      </div>
  </div>
</div>

<% include ../partials/footer %>
