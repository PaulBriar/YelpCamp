<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center; margin-top: 30px;">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit</button>
          <a href="/campgrounds">Go Back</a>
        </div>
      </form>
    </div>




</div>
<% include ../partials/footer %>
