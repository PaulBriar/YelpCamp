<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center; margin-top: 30px;">Add a New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/Campgrounds/<%= campground.id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit</button>
          <a href="/Campgrounds">Go Back</a>
        </div>
      </form>
    </div>




</div>
<% include ../partials/footer %>
